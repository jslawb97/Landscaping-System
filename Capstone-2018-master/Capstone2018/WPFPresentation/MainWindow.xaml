<Window   x:Class="WPFPresentation.MainWindow"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          mc:Ignorable="d"
        Title="Landscape Biz" Height="800" Width="1200" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="175"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!--Logo-->
        <Image Source="images/logo.png"
               Grid.ColumnSpan="2"
               HorizontalAlignment="Left"
               Margin="10 10 10 10"
               Name="imgLogo"></Image>

        <!--Login/logout Area-->
        <StackPanel Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Width="Auto"
                    Height="25"
                    HorizontalAlignment="Right" 
                    Orientation="Horizontal"
                    Margin="0 0 10 0">

            <Label Name="lblUsername" Content="Username">
            </Label>

            <TextBox Width="150"
                     HorizontalContentAlignment="Left"
                     VerticalContentAlignment="Center"
                     Name="txtUsername"
                     Text="Example8@email.com">
            </TextBox>

            <Label Name="lblPassword" Content="Password"
                   Margin="10 0 0 0">
            </Label>

            <PasswordBox Width="150" 
                         HorizontalContentAlignment="Left" 
                         VerticalContentAlignment="Center"
                         Name="txtPassword"
                         Password="newuser">
            </PasswordBox>

            <Button Width="100"
                    Content="Login"
                    Margin="15 0 0 0"
                    Name="btnLogin" Click="btnLogin_Click">
            </Button>

        </StackPanel>

        
        

        <!--Main Area (center)-->
        <Grid Grid.Row="1"
              Grid.Column="0"
              Grid.ColumnSpan="3"
              Margin="10 10 10 10">
            <Grid.RowDefinitions>
                <RowDefinition Height="150"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            

            <TabControl Grid.Row="0"
                        Grid.RowSpan="2"
                        Margin="0 0 0 10"
                        Name="tabsetMain"
                        FontSize="12">

                <!--Employees Tab-->
                <TabItem Header="Employee"
                         Name="tabEmployees">
                    <TabControl TabStripPlacement="Left"
                            BorderThickness="1 0 0 1"
                            Margin="10 10"
                            HorizontalContentAlignment="Left"
                            Name="tabsetEmployee">
                        <TabItem Header="Employees" Selector.Selected="TabItem_Employee_Selected"
                             Height="40">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="35*"/>
                                    <ColumnDefinition Width="24*"/>
                                    <ColumnDefinition Width="302*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height="100"></RowDefinition>
                                </Grid.RowDefinitions>

                              

                                <DataGrid
                                  Margin="10,10,9.6,0"
                                  ItemsSource="{Binding }"
                                  Name="dgEmployees"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single" Grid.ColumnSpan="3" Grid.RowSpan="2">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*"></DataGridTextColumn>
                                        <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Phone Number" Binding="{Binding PhoneNumber}" Width="*"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"></DataGridTextColumn>
                                        <DataGridCheckBoxColumn Header="Active" Binding="{Binding Active}" Width="*"></DataGridCheckBoxColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    Width="Auto"
                                    Height="30"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" Grid.Column="0"  Grid.ColumnSpan="3">
                                    
                                    <Button Content="Availability"
                                    Width="100"
                                    Name="btnAvailability" Click="btnAvailability_Click" Height="30" VerticalAlignment="Top">
                                    </Button>
                                    <Button Content="Add"
                                            Margin="10 0 0 0"
                                    Width="100"
                                    Name="btnAddEmployee" Click="btnAddEmployee_Click">
                                    </Button>
                                    <Button Content="Edit"
                                    Margin="10 0 0 0"
                                    Width="100"
                                    Name="btnEditEmployee" Click="btnEditEmployee_Click">
                                    </Button>
                                    <Button Content="Deactivate"
                                    Margin="10 0 0 0"
                                    Width="100"
                                    Name="btnDeactivateEmployee" Click="btnDeactivateEmployee_Click">
                                    </Button>

                                </StackPanel>
                            </Grid>
                        </TabItem>

                        <TabItem Header="Roles" Name="Roles" Selector.Selected="TabItem_Roles_Selected"
                             Height="40">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="75"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height="100"></RowDefinition>
                                </Grid.RowDefinitions>

                                

                                <DataGrid Grid.Row="0"
                                          Grid.RowSpan="2"
                                  Margin="10 10 10 0"
                                  ItemsSource="{Binding }"
                                  Name="dgRole"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Role" Binding="{Binding RoleID}" Width="*"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"></DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    Width="Auto"
                                    Height="30"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">

                                    <Button Content="Add"
                                    Width="100"
                                    Name="btnAddRole" Click="btnAddRole_Click">
                                    </Button>
                                    <Button Content="Edit"
                                    Margin="10 0 0 0"
                                    Width="100"
                                    Name="btnEditRole" Click="btnEditRole_Click">
                                    </Button>
                                    <Button Content="Delete"
                                    Margin="10 0 0 0"
                                    Width="100"
                                    Name="btnDeleteRole" Click="btnDeleteRole_Click">
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Employee&#x0a;Roles" Name="EmployeeRoles" Selector.Selected="TabItem_EmployeeRole_Selected"
                             Height="40">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="75"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height="100"></RowDefinition>
                                </Grid.RowDefinitions>

                               

                                <DataGrid Grid.Row="0"
                                          Grid.RowSpan="2"
                                  Margin="10 10 10 0"
                                  ItemsSource="{Binding }"
                                  Name="dgEmployeeRole"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Employee Name" Binding="{Binding Employee.FullName}" Width="*"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Role" Binding="{Binding EmployeeRole.RoleID}" Width="*"></DataGridTextColumn>
                                        <DataGridCheckBoxColumn Header="Active" Binding="{Binding EmployeeRole.Active}" Width="*" IsReadOnly="True"></DataGridCheckBoxColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    Width="Auto"
                                    Height="30"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">

                                    <Button Content="Add"
                                    Width="100"
                                    Name="btnAddEmployeeRole" Click="btnAddEmployeeRole_Click">
                                    </Button>
                                    <Button Content="Edit"
                                    Margin="10 0 0 0"
                                    Width="100"
                                    Name="btnEditEmployeeRole" Click="btnEditEmployeeRole_Click">
                                    </Button>
                                    <Button Content="Deactivate"
                                    Margin="10 0 0 0"
                                    Width="100"
                                    Name="btnDeactivateEmployeeRole" Height="30" VerticalAlignment="Top" Click="btnDeactivateEmployeeRole_Click" >
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </TabItem>

                        <TabItem Header="Certifications" Name="Certifications" Selector.Selected="TabItem_Certification_Selected"
                                 
                             Height="40">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="75"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height="100"></RowDefinition>
                                </Grid.RowDefinitions>

                                

                                <DataGrid Grid.Row="0"
                                          Grid.RowSpan="2"
                                  Margin="10 10 10 0"
                                  ItemsSource="{Binding }"
                                  Name="dgCertification"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding CertificationName }" Width="200"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Description" Binding="{Binding CertificationDescription }" Width="*"></DataGridTextColumn>
                                        <DataGridCheckBoxColumn Header="Active" Binding="{Binding Active }" Width="*"></DataGridCheckBoxColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    Width="Auto"
                                    Height="30"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">

                                    <Button Content="Add"
                                    Width="100"
                                    Name="btnAddCertification" Click="btnAddCertification_Click">
                                    </Button>
                                    <Button Content="Edit"
                                    Margin="10 0 0 0"
                                    Width="100"
                                    Name="btnEditCertificatione" Click="btnEditCertification_Click">
                                    </Button>
                                    <Button Content="Deactivate"
                                    Margin="10 0 0 0"
                                    Width="100"
                                    Name="btnDeactivateCertification" Click="btnDeactivateCertification_Click">
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </TabItem>

                        <TabItem Header="Employee&#x0a;Certifications" Selector.Selected="TabItem_EmployeeCertifications_Selected"
                             Height="40">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="75"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height="100"></RowDefinition>
                                </Grid.RowDefinitions>

                               

                                <DataGrid Grid.Row="0"
                                          Grid.RowSpan="2"
                                  Margin="10 10 10 0"
                                  ItemsSource="{Binding }"
                                  Name="dgEmployeeCertification"
                                  AutoGenerateColumns="False" CanUserAddRows="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Employee" Binding="{Binding Employee.Email }" Width="*"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Certification" Binding="{Binding Certification.CertificationName }" Width="*"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Expires" Binding="{Binding EndDate, StringFormat=d }" Width="*"></DataGridTextColumn>
                                        <DataGridCheckBoxColumn Header="Active" Binding="{Binding Active }" Width="*">
                                        </DataGridCheckBoxColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    Width="Auto"
                                    Height="30"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">

                                    <Button Content="Add"
                                    Width="100"
                                    Name="btnAddEmployeeCertification" Click="btnAddEmployeeCertification_Click">
                                    </Button>
                                    <Button Content="Edit"
                                    Margin="10 0 0 0"
                                    Width="100"
                                    Name="btnEditEmployeeCertificatione" Click="btnEditEmployeeCertificatione_Click">
                                    </Button>
                                    <Button Content="Deactivate"
                                    Margin="10 0 0 0"
                                    Width="100"
                                    Name="btnDeactivateEmployeeCertification" Click="btnDeactivateEmployeeCertification_Click">
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </TabItem>

                        <!--Time Off-->
                        <TabItem Header="Time Off&#x0a;Requests" Selector.Selected="TabItem_TimeOffRequests_Selected"
                             Height="40">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="75"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height="100"></RowDefinition>
                                </Grid.RowDefinitions>
                                <DataGrid Grid.Row="0" Grid.RowSpan="2"
                                  Margin="10 10 10 0"
                                  ItemsSource="{Binding }"
                                  Name="dgTimeOffRequests"
									AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    IsReadOnly="True"
                                    SelectionMode="Single">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Employee" Binding="{Binding Employee.LastName }" Width="*"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Start Date" Binding="{Binding TimeOffRequest.StartTime, StringFormat=d }" Width="*"></DataGridTextColumn>
                                        <DataGridTextColumn Header="End Date" Binding="{Binding TimeOffRequest.EndTime, StringFormat=d }" Width="*"></DataGridTextColumn>
                                        <DataGridCheckBoxColumn Header="Approved" Binding="{Binding TimeOffRequest.Approved }" Width="*"></DataGridCheckBoxColumn>
                                        <DataGridCheckBoxColumn Header="Active" Binding="{Binding TimeOffRequest.Active }" Width="*"></DataGridCheckBoxColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    Width="Auto"
                                    Height="30"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">

                                    <Button Content="Add"
                                    Width="100"
                                    Name="btnAddTimeOffRequest" Click="btnAddTimeOffRequest_Click">
                                    </Button>
                                    <Button Content="Edit"
                                    Margin="10 0 0 0"
                                    Width="100"
                                    Name="btnEditTimeOffRequest" Click="btnEditTimeOffRequest_Click">
                                    </Button>
                                    <Button Content="Deactivate"
                                    Margin="10 0 0 0"
                                    Width="100"
                                    Name="btnDeactivateTimeOffRequest" Click="btnDeactivateTimeOffRequest_Click" />
                                </StackPanel>
                            </Grid>
                        </TabItem>

                    </TabControl>
                </TabItem>

                <TabItem Header="Equipment" Selector.Selected="TabItem_Equipment_Selected"
                         Name="tabEquipment">
                    <TabControl TabStripPlacement="Left"
                            BorderThickness="1 0 0 1"
                            Margin="10 10"
                            HorizontalContentAlignment="Left"
                            Name="tabsetEquipment">
                        <TabItem Header="Equipment"
                             Height="40">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="75"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height="100"></RowDefinition>
                                </Grid.RowDefinitions>

                               

                                <DataGrid Grid.Row="0"
                                          Grid.RowSpan="2"
                                  Margin="10 10 10 0"
                                  ItemsSource="{Binding EquipmentDetail}"
                                  Name="dgEquipment"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                  ScrollViewer.CanContentScroll="True" 
                                  HorizontalAlignment="Left"                                         
                                  >
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Equipment.Name}" Width="auto" MaxWidth="200"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Type" Binding="{Binding Equipment.EquipmentTypeID}" Width="auto" MaxWidth="200"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Make" Binding="{Binding Make}" Width="auto" MaxWidth="200"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="auto" MaxWidth="200"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Date Purchased" Binding="{Binding Equipment.DatePurchased, StringFormat=d}" Width="auto" MaxWidth="200"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Last Repaired" Binding="{Binding Equipment.DateLastRepaired, StringFormat=d}" Width="auto" MaxWidth="200"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Warranty Until" Binding="{Binding Equipment.WarrantyUntil, StringFormat=d}" Width="auto" MaxWidth="200"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Purchase Price" Binding="{Binding Equipment.PriceAtPurchase, StringFormat=C}" Width="auto" MaxWidth="200"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Current Value" Binding="{Binding Equipment.CurrentValue, StringFormat=C}" Width="auto" MaxWidth="200"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Status" Binding="{Binding Equipment.EquipmentStatusID}" Width="auto" MaxWidth="200"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Details" Binding="{Binding Equipment.EquipmentDetails}" Width="*" MinWidth="200"></DataGridTextColumn>
                                        <DataGridCheckBoxColumn Header="Active" Binding="{Binding Equipment.Active}" Width="auto" MaxWidth="200"></DataGridCheckBoxColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    Width="Auto"
                                    Height="30"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">

                                    <Button Content="Add"
                                    Width="100"
                                    Name="btnAddEquipment" Click="btnAddEquipment_Click">
                                    </Button>
                                    <Button Content="Edit"
                                    Margin="10 0 0 0"
                                    Width="100"
                                    Name="btnEditEquipment" Click="btnEditEquipment_Click">
                                    </Button>
                                    <Button Content="Deactivate"
                                    Margin="10 0 0 0"
                                    Width="100"
                                    Name="btnDeactivateEquipment" Height="30" VerticalAlignment="Bottom" Click="btnDeactivateEquipment_Click">
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Make&#x0a;Model" Name="tabMakeModel" Selector.Selected="TabItem_MakeModel_Selected"
                             Height="40"
                             HorizontalContentAlignment="Left">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="75"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height="100"></RowDefinition>
                                </Grid.RowDefinitions>

                                

                                <DataGrid Grid.Row="0"
                                          Grid.RowSpan="2"
                                  Margin="10 10 10 0"
                                  ItemsSource="{Binding }"
                                  Name="dgMakeModel"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Make" Binding="{Binding Make}" Width="*"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="*"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Maintenance Checklist" Binding="{Binding MaintenanceChecklistName}" Width="*"></DataGridTextColumn>
                                        <DataGridCheckBoxColumn Header="Active" Binding="{Binding Active}" Width="*"></DataGridCheckBoxColumn>
                                    </DataGrid.Columns>

                                </DataGrid>
                                <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    Width="Auto"
                                    Height="30"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">

                                    <Button Content="Add"
                                    Width="100"
                                    Name="btnAddMakeModel" Click="btnAddMakeModel_Click">
                                    </Button>
                                    <Button Content="Edit"
                                    Margin="10 0 0 0"
                                    Width="100"
                                    Name="btnEditMakeModel" Click="btnEditMakeModel_Click">
                                    </Button>
                                    <Button Content="Deactivate"
                                    Margin="10 0 0 0"
                                    Width="100"
                                    Name="btnDeactivateMakeModel" Click="btnDeactivateMakeModel_Click">
                                    </Button>
                                </StackPanel>
                            </Grid>

                        </TabItem>
                        <TabItem Header="Equipment&#x0a;Type" Name="tabEquipmentType" Selector.Selected="tabEquipmentType_Selected" Height="40">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="75"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height="100"></RowDefinition>
                                </Grid.RowDefinitions>

                                

                                <DataGrid Grid.Row="0"
                                          Grid.RowSpan="2"
                                  Margin="10 10 10 0"
                                  ItemsSource="{Binding EquipmentTypeDetail}"
                                  Name="dgEquipmentType"
                                  IsReadOnly="True"
                                  AutoGenerateColumns="False"
                                  SelectionMode="Single"
                                  CanUserAddRows="False"
                                          >
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Type" Binding="{Binding EquipmentType.EquipmentTypeID}" Width="*"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Inspection Checklist" Binding="{Binding InspectionChecklist.Name}" Width="*"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Prep Checklist" Binding="{Binding PrepChecklist.Name}" Width="*"></DataGridTextColumn>
                                        <DataGridCheckBoxColumn Header="Active" Binding="{Binding EquipmentType.Active}" Width="*"></DataGridCheckBoxColumn>
                                    </DataGrid.Columns>

                                </DataGrid>
                                <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    Width="Auto"
                                    Height="30"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">

                                    <Button Content="Add"
                                    Width="100"
                                    Name="btnAddEquipmentType" Click="btnAddEquipmentType_Click">
                                    </Button>
                                    <Button Content="Edit"
                                    Margin="10 0 0 0"
                                    Width="100"
                                    Name="btnEditEquipmentType" Click="btnEditEquipmentType_Click">
                                    </Button>
                                    <Button Content="Deactivate"
                                    Margin="10 0 0 0"
                                    Width="100"
                                    Name="btnDeactivateEquipmentType" Click="btnDeactivateEquipmentType_Click">
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                        <TabItem x:Name="InspectionChecklistTab" Header="Inspection&#x0a;Checklist"
                             Height="40" Selector.Selected="InspectionChecklistTab_Selected" Margin="-2,0,0,0" VerticalAlignment="Bottom">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="75"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height="100"></RowDefinition>
                                </Grid.RowDefinitions>

                                

                                <DataGrid Grid.Row="0"
                                          Grid.RowSpan="2"
                                  Margin="10 10 10 0"
                                  ItemsSource="{Binding }"
                                  Name="dgInspectionChecklist"
                                  IsReadOnly="True"
                                  AutoGenerateColumns="False"
                                  SelectionMode="Single"
                                  CanUserAddRows="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Decription" Binding="{Binding Description}" Width="*"></DataGridTextColumn>
                                        <DataGridCheckBoxColumn Header="Active" Binding="{Binding Active}" Width="100"></DataGridCheckBoxColumn>
                                    </DataGrid.Columns>

                                </DataGrid>
                                <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    Width="Auto"
                                    Height="30"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">

                                    <Button Content="Add"
                                    Width="100"
                                    Name="btnAddInspectionChecklist" Height="30" VerticalAlignment="Top" Click="btnAddInspectionChecklist_Click">
                                    </Button>
                                    <Button Content="Edit"
                                    Margin="10 0 0 0"
                                    Width="100"
                                    Name="btnEditInspectionChecklist" Click="btnEditInspectionChecklist_Click">
                                    </Button>
                                    <Button Content="Deactivate"
                                    Margin="10 0 0 0"
                                    Width="100"
                                    Name="btnDeleteInspectionChecklist" Click="btnDeleteInspectionChecklist_Click">
                                    </Button>
                                </StackPanel>
                            </Grid>

                        </TabItem>
                        <TabItem Header="Prep&#x0a;Checklist" Name="tabPrepChecklist" Selector.Selected="TabPrepChecklist_Selected" Margin="-2,0,-0.4,0" Height="36" VerticalAlignment="Top">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="75"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height="100"></RowDefinition>
                                </Grid.RowDefinitions>

                               

                                <!--ItemsSource="{Binding PrepChecklist}"-->
                                <DataGrid Grid.Row="0"
                                          Grid.RowSpan="2"
                                  Margin="10 10 10 0" 
                                  Name="dgPrepChecklist"
                                  AutoGenerateColumns="False" SelectionMode="Single" ItemsSource="{Binding}" CanUserAddRows="false" IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <!-- <DataGridTextColumn Header="Prep Checklist ID" Binding="{Binding PrepChecklistID}" Width="200" IsReadOnly="True"></DataGridTextColumn>-->
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" IsReadOnly="True"></DataGridTextColumn>
                                        <DataGridCheckBoxColumn Header="Active" Binding="{Binding Active}" Width="*"></DataGridCheckBoxColumn>
                                    </DataGrid.Columns>

                                </DataGrid>
                                <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    Width="Auto"
                                    Height="30"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">

                                    <Button Content="Add"
                                    Width="100"
                                    Name="btnAddPrepChecklist" Click="btnAddPrepChecklist_Click">
                                    </Button>
                                    <Button Content="Edit"
                                    Margin="10 0 0 0"
                                    Width="100"
                                    Name="btnEditPrepChecklist" Click="btnEditPrepChecklist_Click">
                                    </Button>
                                    <Button Content="Deactivate"
                                    Margin="10 0 0 0"
                                    Width="100"
                                    Name="btnDeactivatePrepChecklist" Click="btnDeactivatePrepChecklist_Click">
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                        <TabItem Name="tiMaintChecklist" Header="Maintenance&#x0a;Checklist"
                             Height="40" Selector.Selected="tiMaintChecklist_Selected">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="75"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height="100"></RowDefinition>
                                </Grid.RowDefinitions>

                               

                                <DataGrid Grid.Row="0"
                                          Grid.RowSpan="2"
