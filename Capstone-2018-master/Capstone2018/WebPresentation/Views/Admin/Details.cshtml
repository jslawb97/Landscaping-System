@model WebPresentation.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
}

<h2>User Details</h2>


<div>
    <h4>User Page</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt>
            Roles:
        </dt>
